{% extends 'base.html.twig' %}
{% set title = "Register" %}
{% block title %} {{title}}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-lg-6 col-md-8 offset-lg-3 offset-md-2">
				<h1>{{title}}</h1> {{ form_start(registrationForm) }}
				<div class="row">
					<div class="col-6">
						<div class="form-group">{{form_label(registrationForm.firstname)}} {{form_widget(registrationForm.firstname)}} {{form_errors(registrationForm.firstname)}} {{form_help(registrationForm.firstname)}}
						</div>
					</div>
					<div class="col-6">
						<div class="form-group">{{form_label(registrationForm.lastname)}} {{form_widget(registrationForm.lastname)}} {{form_errors(registrationForm.lastname)}} {{form_help(registrationForm.lastname)}}
						</div>
					</div>
				</div>

				<div class="row">
					<di class="col-4">
						<div class="form-group">{{form_label(registrationForm.birthday.day)}} {{form_widget(registrationForm.birthday.day)}} {{form_errors(registrationForm.birthday.day)}} {{form_help(registrationForm.birthday.day)}}
						</div>
					</di>
					<di class="col-4">
						<div class="form-group">{{form_label(registrationForm.birthday.month)}} {{form_widget(registrationForm.birthday.month)}} {{form_errors(registrationForm.birthday.month)}} {{form_help(registrationForm.birthday.month)}}
						</div>
					</di>
					<di class="col-4">
						<div class="form-group">{{form_label(registrationForm.birthday.year)}} {{form_widget(registrationForm.birthday.year)}} {{form_errors(registrationForm.birthday.year)}} {{form_help(registrationForm.birthday.year)}}
						</div>
					</di>
				</div>

				<div class="form-group">{{form_label(registrationForm.email)}} {{form_widget(registrationForm.email)}} {{form_errors(registrationForm.email)}} {{form_help(registrationForm.email)}}
				</div>


				<div class="row">
					<div class="col-6">
						<div class="form-group">{{form_label(registrationForm.plainPassword.first)}} {{form_widget(registrationForm.plainPassword.first)}} {{form_errors(registrationForm.plainPassword.first)}} {{form_help(registrationForm.plainPassword.first)}}
						</div>
					</div>
					<div class="col-6">
						<div class="form-group">{{form_label(registrationForm.plainPassword.second)}} {{form_widget(registrationForm.plainPassword.second)}} {{form_errors(registrationForm.plainPassword.second)}} {{form_help(registrationForm.plainPassword.second)}}
						</div>
					</div>
				</div>

				<div class="form-group"> {{ form_row(registrationForm.agreeTerms) }}
				</div>
				<button type="submit" class="btn">Register</button> {{ form_end(registrationForm) }}</div>
		</div>

	</div>
</div>{% endblock %}
